<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.wishlist.giftingapp.SeniorViewProfileActivity">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/toolbarEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/oswald_medium"
        android:text="Name"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageViewEditProfileBackButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:background="@drawable/back_blue"/>

</android.support.v7.widget.Toolbar>


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera"
            android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>


    <Button
        android:id="@+id/buttonEditInfo_Senior"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bgbtn"
        android:fontFamily="@font/oswald_regular"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Profile Info"
        android:textColor="@color/colorAccent"
        android:textSize="24dp" />

    <Button
        android:id="@+id/buttonEditWishlist_Senior"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bgbtn"
        android:fontFamily="@font/oswald_regular"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="View Wishlist"
        android:textColor="@color/colorAccent"
        android:textSize="24dp" />


</LinearLayout>