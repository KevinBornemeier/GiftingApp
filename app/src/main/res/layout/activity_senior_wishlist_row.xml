<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginTop="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">


            <ImageView
                android:id="@+id/seniorWishlistItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="5000dp"
                android:minHeight="350dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/seniorWishlistItemTitle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#E4F8FFFF"
                android:fontFamily="@font/oswald_medium"
                android:paddingBottom="20dp"
                android:text="Title"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="38dp" />

            <TextView
                android:id="@+id/seniorWishlistItemPrice"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#E4F8FFFF"
                android:fontFamily="@font/oswald_regular"
                android:paddingBottom="20dp"
                android:text="Price"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonAmazonLink"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="55dp"
                android:paddingRight="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"
                android:text="Go to Amazon"
                android:background="@drawable/bgbtn4"
                android:fontFamily="@font/oswald_regular"
                android:textSize="24dp"
                android:textColor="@color/colorAccent"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

